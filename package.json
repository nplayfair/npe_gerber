{
  "name": "@nplayfair/npe_gerber",
  "version": "1.0.1",
  "description": "Create a PCB image from gerber files",
  "main": "dist/index.js",
  "types": "types/npe_gerber.d.ts",
  "scripts": {
    "build": "tsc --build",
    "test": "NODE_ENV=test PORT=7788 jest",
    "test:watch": "npm run test -- --watchAll",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nplayfair/npe_gerber.git"
  },
  "author": "nplayfair",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nplayfair/npe_gerber/issues"
  },
  "homepage": "https://github.com/nplayfair/npe_gerber#readme",
  "keywords": [
    "pcb",
    "image",
    "gerber"
  ],
  "jest": {
    "verbose": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "roots": [
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "fs-extra": "^11.3.0",
    "pcb-stackup": "^4.2.8",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "eslint": "^9.29.0",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
